#Partially working. The logic is not correct

def prime_factors(n):
    for i in range(2, n):
        if n % i == 0:
            print("i = ", i)
            print(i, " is divisor of ",n)
            print("----")
            
            n == n / i
            i == i - 1
    
res = prime_factors(45)
print("prime factors res:", res)


